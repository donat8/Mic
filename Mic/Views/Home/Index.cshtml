
@model IEnumerable<Mic.Models.Cat>


<div class="text-center">
    <h1 class="display-4">Mice na lageru: </h1>
</div>

<div class="card-deck" id="Cats">

    @foreach (var cat in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="card border-warning justify-content-center" style="width: 18rem; margin-bottom:25px;">
                <div class="card-header"><h3><b>@Html.DisplayFor(modelItem => cat.Name)</b></h3></div>
                <div class="container-pic">
                    <img class="card-img-bottom" width="250" height="200" style="margin:0px;" src="@Html.DisplayFor(modelItem => cat.ImageUrl)" />
                    <div class="overlay-pic">
                        <div class="text-fade-away">@Html.DisplayFor(modelItem => cat.ShortDescription)</div>
                    </div>
                </div>
                <div class="card-footer">

                    <div class="row justify-content-center">
                        @*like
                            <div class="col-sm">
                                <a class="btn btn-outline-danger btn-lg">
                                    <i class="far fa-heart fa-lg"></i>
                                </a>
                            </div>
                            comment
                            <div class="col-sm">
                                <a class="btn btn-outline-info btn-lg">
                                    <i class="far fa-comment-dots fa-lg"></i>
                                </a>
                            </div>*@
                        @*shoppingcart*@
                        <div class="col-sm-auto align-middle">
                            <a class="btn btn-success btn-sm" style="background-color:limegreen;width:220px;height:45px;padding:0;align-content:center;flex:auto;" id="cartButton"
                               asp-controller="ShoppingCart"
                               asp-action="AddToShoppingCart"
                               asp-route-catId="@cat.CatId">
                                <b> @Html.DisplayFor(modelItem => cat.Price)</b>
                                <br />
                                <i class="fas fa-cart-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


